<Window x:Class="RabbitCopy.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:viewModels="clr-namespace:RabbitCopy.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type={x:Type viewModels:InputBoxWindowViewModel}}"
        Title="{Binding Title}" Height="120" Width="330">
    <Grid>
        <hc:SimpleStackPanel>
            <hc:TextBox Margin="0,10,0,0" Text="{Binding Text}" />
            <hc:SimpleStackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                 Margin="0,10,0,0">
                <Button Content="Ok" Margin="0,0,10,0"
                        Command="{Binding OkCommand}" />
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}" />
            </hc:SimpleStackPanel>
        </hc:SimpleStackPanel>
    </Grid>
</Window>