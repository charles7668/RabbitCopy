<Window x:Class="RabbitCopy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:viewModels="clr-namespace:RabbitCopy.ViewModels"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:models="clr-namespace:RabbitCopy.Models"
        xmlns:converters="clr-namespace:RabbitCopy.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel, IsDesignTimeCreatable=False}"
        Icon="{Binding WindowIcon}"
        TextElement.FontSize="10"
        Background="GhostWhite"
        WindowStartupLocation="CenterScreen"
        x:Name="MainWindowName"
        Title="RabbitCopy" Height="600" Width="505">
    <Window.Resources>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonBaseStyle}">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
        <Style TargetType="{x:Type CheckBox}" BasedOn="{StaticResource CheckBoxBaseStyle}">
            <Setter Property="FontSize" Value="10" />
        </Style>
        <Style TargetType="{x:Type hc:NumericUpDown}" BasedOn="{StaticResource NumericUpDownBaseStyle}">
            <Setter Property="FontSize" Value="10" />
        </Style>
        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource ComboBoxBaseStyle}">
            <Setter Property="FontSize" Value="10" />
        </Style>
        <converters:FilePropertyToStringConverter
            x:Key="FilePropertyToStringConverter" />
        <converters:FileAttributesToStringConverter
            x:Key="FileAttributesToStringConverter" />
    </Window.Resources>
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="ContentRendered">
            <b:InvokeCommandAction Command="{Binding WindowContentRenderedCommand}" />
        </b:EventTrigger>
        <b:EventTrigger EventName="Closing">
            <b:InvokeCommandAction Command="{Binding WindowClosingCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <Menu.Resources>
                <HierarchicalDataTemplate DataType="{x:Type viewModels:ConfigIdentityChildCommandViewModel}">
                    <TextBlock Text="{Binding Text}" />
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type viewModels:ConfigIdentityViewModel}"
                                          ItemsSource="{Binding ChildCommandViewModels}">
                    <HierarchicalDataTemplate.ItemContainerStyle>
                        <Style TargetType="MenuItem" BasedOn="{StaticResource MenuItemBaseStyle}">
                            <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                            <Setter Property="Command"
                                    Value="{Binding ExecuteCommand}" />
                            <Setter Property="CommandParameter"
                                    Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type MenuItem}},Path=DataContext}" />
                        </Style>
                    </HierarchicalDataTemplate.ItemContainerStyle>
                    <TextBlock Text="{Binding Name}" />
                </HierarchicalDataTemplate>
            </Menu.Resources>
            <MenuItem Header="Setting(_S)" x:Name="SettingsMenuItemName">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="SubmenuOpened">
                        <b:InvokeCommandAction Command="{Binding SettingsSubmenuOpenedCommand}" />
                    </b:EventTrigger>
                    <b:EventTrigger EventName="SubmenuClosed">
                        <b:InvokeCommandAction
                            Command="{Binding SettingsSubmenuClosedCommand}"
                            CommandParameter="{Binding ElementName=SettingsMenuItemName}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <MenuItem Header="Save Config(_S)" Command="{Binding SaveConfigCommand}" />
                <MenuItem Header="Load Config(_L)" ItemsSource="{Binding ConfigIdentities}" />
                <MenuItem Header="Shell Extension Installer(_I)" Command="{Binding OpenShellExtensionInstallerCommand}" />
            </MenuItem>
        </Menu>
        <Grid>
            <ScrollViewer>
                <StackPanel HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Content="Src" Command="{Binding SelectSourcesCommand}" />
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Style="{StaticResource TextBoxExtend}"
                                 Text="{Binding SrcText}"
                                 hc:InfoElement.Title="Source"
                                 VerticalAlignment="Center"
                                 AcceptsReturn="True"
                                 AcceptsTab="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 MaxHeight="200" />
                        <Button Grid.Row="0" Grid.Column="2"
                                Margin="0,10,0,0"
                                Width="25"
                                Click="SrcHistoryButton_OnClick"
                                Style="{StaticResource ButtonIcon.Small}"
                                hc:IconElement.Geometry="{StaticResource  DownGeometry}">
                            <Button.ContextMenu>
                                <ContextMenu Name="SrcHistoryContextMenu" ItemsSource="{Binding SrcHistory}">
                                    <ContextMenu.ItemContainerStyle>
                                        <Style TargetType="MenuItem" BasedOn="{StaticResource MenuItemBaseStyle}">
                                            <Setter Property="Command"
                                                    Value="{Binding DataContext.SelectSrcHistoryCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
                                            <Setter Property="CommandParameter" Value="{Binding}" />
                                        </Style>
                                    </ContextMenu.ItemContainerStyle>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>

                        <Button Grid.Row="1" Grid.Column="0" Content="Dest"
                                Command="{Binding SelectDestDirCommand}" />
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Style="{StaticResource TextBoxExtend}"
                                 hc:InfoElement.Title="Destination"
                                 Text="{Binding DestText}"
                                 VerticalAlignment="Center" />
                        <Button Grid.Row="1" Grid.Column="2"
                                Margin="0,20,0,0"
                                Width="25"
                                Click="DstHistoryButton_OnClick"
                                Style="{StaticResource ButtonIcon.Small}"
                                hc:IconElement.Geometry="{StaticResource  DownGeometry}" HorizontalAlignment="Right"
                                VerticalAlignment="Top">
                            <Button.ContextMenu>
                                <ContextMenu Name="DstHistoryContextMenu" ItemsSource="{Binding DstHistory}">
                                    <ContextMenu.ItemContainerStyle>
                                        <Style TargetType="MenuItem" BasedOn="{StaticResource MenuItemBaseStyle}">
                                            <Setter Property="Command"
                                                    Value="{Binding DataContext.SelectDstHistoryCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
                                            <Setter Property="CommandParameter" Value="{Binding}" />
                                        </Style>
                                    </ContextMenu.ItemContainerStyle>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>

                    </Grid>
                    <hc:SimpleStackPanel Orientation="Horizontal">
                        <CheckBox Content="No Progress" IsChecked="{Binding NoProgress}" />
                        <TextBlock VerticalAlignment="Center" Margin="10,0,0,0">
                            Progress : <TextBlock Text="{Binding ProgressText}" />
                        </TextBlock>
                    </hc:SimpleStackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <hc:SimpleStackPanel>
                            <hc:TextBox Name="TxtLog"
                                        Height="200" IsReadOnly="True"
                                        Text="{Binding CopyLog}"
                                        TextWrapping="Wrap" />
                            <GroupBox Background="GhostWhite" Header="Throttling" Style="{StaticResource GroupBoxTab}">
                                <hc:SimpleStackPanel>
                                    <CheckBox IsChecked="{Binding EnableThrottling}">Enable Throttling</CheckBox>
                                    <hc:SimpleStackPanel Orientation="Horizontal">
                                        <TextBlock VerticalAlignment="Center">io max size</TextBlock>
                                        <hc:NumericUpDown Value="{Binding ThrottlingIoMaxSize}" />
                                        <ComboBox ItemsSource="{Binding ThrottlingUnits}"
                                                  SelectedItem="{Binding SelectedIoMaxSizeThrottlingUnit}" />
                                    </hc:SimpleStackPanel>
                                    <hc:SimpleStackPanel Orientation="Horizontal">
                                        <TextBlock VerticalAlignment="Center">io rate</TextBlock>
                                        <hc:NumericUpDown Value="{Binding ThrottlingIoRate}" />
                                        <ComboBox ItemsSource="{Binding ThrottlingUnits}"
                                                  SelectedItem="{Binding SelectedIoRateThrottlingUnit}" />
                                    </hc:SimpleStackPanel>
                                    <hc:SimpleStackPanel Orientation="Horizontal">
                                        <TextBlock VerticalAlignment="Center">threshold</TextBlock>
                                        <hc:NumericUpDown Value="{Binding ThrottlingThreshold}" />
                                        <ComboBox ItemsSource="{Binding ThrottlingUnits}"
                                                  SelectedItem="{Binding SelectedThresholdThrottlingUnit}" />
                                    </hc:SimpleStackPanel>
                                </hc:SimpleStackPanel>
                            </GroupBox>
                        </hc:SimpleStackPanel>
                        <Grid Grid.Column="1">
                            <Border Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <ScrollViewer>
                                        <hc:UniformSpacingPanel Orientation="Vertical" HorizontalAlignment="Stretch"
                                                                Spacing="10">
                                            <ComboBox ItemsSource="{Binding CopyModeView}"
                                                      SelectedItem="{Binding SelectedCopyMode}">
                                                <ComboBox.Resources>
                                                    <converters:CopyModeEnumToStringConverter
                                                        x:Key="CopyModeEnumToStringConverter" />
                                                </ComboBox.Resources>
                                                <ComboBox.GroupStyle>
                                                    <GroupStyle>
                                                        <GroupStyle.HeaderTemplate>
                                                            <DataTemplate>
                                                                <Border Background="LightGray"
                                                                        Padding="5,2"
                                                                        Margin="0,2"
                                                                        d:DataContext="{d:DesignInstance Type=models:CopyModeItem}">
                                                                    <TextBlock
                                                                        Text="{Binding Mode,Converter={StaticResource CopyModeEnumToStringConverter}}"
                                                                        FontWeight="Bold"
                                                                        FontSize="11"
                                                                        Foreground="DarkSlateGray" />
                                                                </Border>
                                                            </DataTemplate>
                                                        </GroupStyle.HeaderTemplate>
                                                        <GroupStyle.ContainerStyle>
                                                            <Style TargetType="GroupItem">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="GroupItem">
                                                                            <StackPanel>
                                                                                <ItemsPresenter />
                                                                                <Separator Margin="5,2"
                                                                                    Background="LightGray"
                                                                                    Height="1" />
                                                                            </StackPanel>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </GroupStyle.ContainerStyle>
                                                    </GroupStyle>
                                                </ComboBox.GroupStyle>

                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Margin="5,2"
                                                                    d:DataContext="{d:DesignInstance Type=models:CopyModeItem}">
                                                            <TextBlock
                                                                Text="{Binding Mode, Converter={StaticResource CopyModeEnumToStringConverter}}"
                                                                FontWeight="Medium" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>

                                                <ComboBox.ItemContainerStyle>
                                                    <Style TargetType="ComboBoxItem">
                                                        <Setter Property="Padding" Value="5,3" />
                                                        <Style.Triggers>
                                                            <Trigger Property="IsHighlighted" Value="True">
                                                                <Setter Property="Background" Value="LightBlue" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ComboBox.ItemContainerStyle>
                                            </ComboBox>
                                            <CheckBox HorizontalAlignment="Left"
                                                      IsChecked="{Binding ExcludeEmptyDirsOption}">
                                                Exclude Empty Directories
                                            </CheckBox>
                                            <CheckBox HorizontalAlignment="Left"
                                                      IsChecked="{Binding UnbufferedIo}">
                                                Unbuffered I/O
                                            </CheckBox>
                                            <hc:SimpleStackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                <Button Command="{Binding OpenFilePropertySelectWindowCommand}">File Property</Button>
                                                <TextBlock VerticalAlignment="Center"
                                                           Text="{Binding FileProperty, Converter={StaticResource FilePropertyToStringConverter}}" />
                                            </hc:SimpleStackPanel>
                                            <hc:SimpleStackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                <Button
                                                    Command="{Binding OpenFileAttributesSelectWindowIncludeCommand}">
                                                    Add File Attributes
                                                </Button>
                                                <TextBlock VerticalAlignment="Center"
                                                           Text="{Binding AddFileAttributes, Converter={StaticResource FileAttributesToStringConverter}}" />
                                            </hc:SimpleStackPanel>
                                            <hc:SimpleStackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                <Button
                                                    Command="{Binding OpenFileAttributesSelectWindowExcludeCommand}">
                                                    Del File Attributes
                                                </Button>
                                                <TextBlock VerticalAlignment="Center"
                                                           Text="{Binding RemoveFileAttributes, Converter={StaticResource FileAttributesToStringConverter}}" />
                                            </hc:SimpleStackPanel>
                                            <CheckBox IsChecked="{Binding CreateOnly}">Create Only</CheckBox>
                                            <hc:SimpleStackPanel Orientation="Horizontal">
                                                <TextBlock VerticalAlignment="Center">Thread</TextBlock>
                                                <hc:NumericUpDown Maximum="128" Minimum="1" Value="{Binding ThreadNum}"
                                                                  Width="60" />
                                                <TextBlock VerticalAlignment="Center">(1 - 128)</TextBlock>
                                            </hc:SimpleStackPanel>
                                        </hc:UniformSpacingPanel>
                                    </ScrollViewer>
                                    <hc:SimpleStackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button Command="{Binding ExecuteCopyCommand}">Execute</Button>
                                        <Button Command="{Binding DryRunCopyCommand}">Dry Run</Button>
                                    </hc:SimpleStackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                    <hc:SimpleStackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <CheckBox IsChecked="{Binding EnableFilterFileAttributes}">Filter File Attribute</CheckBox>
                        <Button Margin="10,0,0,0"
                                Command="{Binding OpenFilterFileAttributesSelectWindowCommand}">
                            Select Attribute
                        </Button>
                        <TextBlock
                            VerticalAlignment="Center"
                            Text="{Binding FilterFileAttributes , Converter={StaticResource FileAttributesToStringConverter}}" />
                    </hc:SimpleStackPanel>
                    <hc:SimpleStackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <CheckBox IsChecked="{Binding EnableFilterName}">Filter Name</CheckBox>
                        <ComboBox Margin="10,0,10,0" IsEditable="True" Width="200"
                                  Text="{Binding FilterName}" />
                        <Button Command="{Binding OpenFilterFileNameSettingWindowCommand}">...</Button>
                    </hc:SimpleStackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </DockPanel>
</Window>