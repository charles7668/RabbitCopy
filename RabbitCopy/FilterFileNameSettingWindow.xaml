<Window x:Class="RabbitCopy.FilterFileNameSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:RabbitCopy.ViewModels"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        d:DataContext="{d:DesignInstance Type={x:Type viewModels:FilterFileNameSettingWindowViewModel}}"
        Title="FilterFileNameSettingWindow" Height="450" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock>Filter items split by each line.</TextBlock>
            <TextBox TextWrapping="Wrap"
                     Height="300"
                     MaxHeight="300"
                     VerticalContentAlignment="Top"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     Text="{Binding  FilterItemText}" />
        </StackPanel>
    </Grid>
</Window>